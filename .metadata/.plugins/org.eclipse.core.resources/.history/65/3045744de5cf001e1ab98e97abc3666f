package com.hughes.practice;

//write a java program for beow requirement.
//i/p:Hyderabad
//o/p:dabaredyH

public class Third {

	public static void main(String[] args) {
		String s="Hyderabad";
		int n=s.length();
		char[] ch=new char[n];
		for(int i=0;i<n;++i)
		{
			char c=s.charAt(i);
			if(Character.isUpperCase(c)) ch[n-i-1]=Character.toLowerCase(c);
			else ch[n-1-i]=Character.toUpperCase(c);
		}
		System.out.println(new String(ch));

	}

}
